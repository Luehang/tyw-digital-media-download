<!DOCTYPE html>
<html>
    <head>
        <title>{{title}}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="/stylesheets/application.min.css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <link href="https://fonts.googleapis.com/css?family=Oxygen:400,300,700" rel="stylesheet">
    </head>

    {{!-- Global site tag (gtag.js) - Google Analytics --}}
    <input id="googleAnalytic" type="hidden" value="{{ GOOGLE_TRACKING_ID }}" />
    <script async src="https://www.googletagmanager.com/gtag/js?id={{ GOOGLE_TRACKING_ID }}"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', document.getElementById('googleAnalytic').value);
    </script>

    <header>
        {{> header }}
    </header>

    {{!-- Error and success message alerts. --}}
    {{#if hasSuccess}}
        <div class="annotation-content">
            <div class="annotation">
                <a class="close"><img src="/img/close.svg"/></a>
                <div id="success" class="alert alert-success">
                    <p style="color: green;">{{ successMsg }}</p>
                </div>
            </div>
        </div>
    {{/if}}

    {{#if hasErrors}}
        <div class="annotation-content">
            <div class="annotation">
                <a class="close"><img src="/img/close.svg"/></a>
                <div class="alert alert-danger">
                    {{#each messages }}
                        <p style="color: red;">* {{this}}</p>
                    {{/each}}
                </div>
            </div>
        </div>
    {{/if}}

    <div class="annotation-content" id="front-annotation" style="display: none">
        <div class="annotation">
            <a class="close"><img src="/img/close.svg"/></a>
            <div id="alert" class="alert alert-danger">
                
            </div>
        </div>
    </div>
    
    <body>
        
        <div class="clearfix">
            
            {{{body}}}

            {{#if pagination }}
                <div class="pagination-container">
                    {{#if hasPerviousPagesUrl }}
                        <div class="prev button">
                            <a href="{{hasPerviousPagesUrl}}">
                                <img class="pagination-left-icon" src="/img/left-double-arrow.svg"/>
                            </a>
                        </div>
                    {{else}}
                        <div class="prev button">
                            <a>
                                <img class="pagination-left-icon" src="/img/left-double-arrow-disabled.svg"/>
                            </a>
                        </div>
                    {{/if }}
                    <div class="button">
                        <a>{{pageNumber}}</a>
                    </div>
                    {{#if hasNextPagesUrl }}
                        <div class="next button">
                            <a href="{{hasNextPagesUrl}}">
                                <img class="pagination-right-icon" style="color: gray;" src="/img/right-double-arrow.svg"/>
                            </a>
                        </div>
                    {{else }}
                        <div class="next button">
                            <a>
                                <img class="pagination-right-icon" src="/img/right-double-arrow-disabled.svg"/>
                            </a>
                        </div>
                    {{/if }}
                </div>
            {{/if}}
        </div>

    </body>

    <footer>
        <div class="footer-container">
            {{> footer }}
        </div>
    </footer>
        
    <script type="text/javascript" src="/javascripts/index.min.js"></script>
</html>

