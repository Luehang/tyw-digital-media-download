<div>
    <div class="primary-container" style="padding-top:10px">
        <div class="form-container">
            <h1 style="margin: 0 0 .5em; padding-top: 65px;">Reset Password</h1>
            {{#if sendReset }}
                <p>Enter your email below and we will send you a link to reset your password.</p>
                <form id="sign-in-form" class="form" action="/login/reset-password?type=send-reset" method="POST">
                    <fieldset>
                        <div label="Email" class="row">
                            <input type="email" name="email" placeholder="jane@example.com" autocomplete="email" maxlength="30"/>
                        </div>
                    </fieldset>
                    <button type="submit">Send</button>
                </form>
            {{/if }}
            {{#if receiveReset }}
                <p>Enter new password.</p>
                <form id="sign-in-form" class="form" action="/login/reset-password?type=receive-reset&password_reset_token={{ passwordResetToken }}&_method=PUT" method="POST">
                    <fieldset>
                        <div label="New Password" class="row">
                            <input type="password" name="newPassword" placeholder="••••••••" maxlength="20"/>
                        </div>
                        <div label="Confirm Password" class="row">
                            <input type="password" name="newPasswordConfirmation" placeholder="••••••••" maxlength="20"/>
                        </div>
                        <input type="hidden" name="passwordResetToken" value="{{ passwordResetToken }}">
                        {{!-- <input type="hidden" name="csrfToken" value="{{ csrfToken }}"> --}}
                    </fieldset>
                    <button type="submit">Submit</button>
                </form>
            {{/if }}
            {{#if sendConfirm }}
                <p>Email sent successfully to {{ email }}. Check Email and follow the instructions.</p>    
            {{/if }}
        </div>
    </div>
</div>